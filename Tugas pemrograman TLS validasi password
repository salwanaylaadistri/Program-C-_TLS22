#include <iostream>
using namespace std;

int main(){
    
    string password = "251104";
    string kataSandi;
    bool benar;
    
    cout << "\t Program Validasi Password Akun Pribadi \n\n";
    
        cout << "Silahkan Input Kata Sandi Anda" << endl;
        cout << "Kata Sandi : ";
        cin >> kataSandi;
        
        //validasi Password
        if(kataSandi == password){
            benar = true;
            cout << "\n Kata Sandi Anda Benar/Valid";
            
        }
        else{
            cout << "\n Akun Anda Terblokir, Silahkan menghubungi call centre terdekat. \n";
            
        }
}
            
  
